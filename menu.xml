<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>st</execute>
			</action>
		</item>
		<item label="Text Editor">
			<action name="Execute">
				<execute>geany</execute>
			</action>
		</item>
		<item label="Calculator">
			<action name="Execute">
				<execute>gnome-calculator</execute>
			</action>
		</item>
		<item label="Web Browser">
			<action name="Execute">
				<execute>x-www-browser</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'openbox-menu' package to work -->
		<item label="Open File Manager">
			<action name="Execute">
				<execute>/usr/bin/thunar</execute>
			</action>
		</item>
		<separator/>
		<item label="LibreOffice Suite">
			<action name="Execute">
				<execute>libreoffice</execute>
			</action>
		</item>
		<separator/>
		<menu execute="/usr/bin/obamenu" id="applications-menu" label="Applications"/>
		<separator/>
		<item label="Edit Obmenu">
			<action name="Execute">
				<execute>obmenu</execute>
			</action>
		</item>
		<item label="Configure Openbox">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
		</item>
		<menu id="root-menu-344617" label="Change Appearance">
			<item label="Change Background">
				<action name="Execute">
					<execute>nitrogen</execute>
				</action>
			</item>
			<item label="Change Theme">
				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<item label="Refresh OpenBox Session">
			<action name="Restart"/>
		</item>
		<separator/>
		<item label="Log Out">
			<action name="Exit"/>
		</item>
		<separator/>
		<item label="Restart/Shutdown">
			<action name="Execute">
				<execute>obsession-logout</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
